<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboargingActivity"
    android:background="@color/white"
    >
    <RelativeLayout
        android:background="@drawable/ic_oneonbiarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/slideviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/dots"
            android:layout_centerInParent="true"
            >

        </androidx.viewpager.widget.ViewPager>

<!--        <LinearLayout-->
<!--            android:id="@+id/dots"-->
<!--            android:orientation="horizontal"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_above="@+id/tamplatenext"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_marginBottom="30dp" />-->

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tamplatenext"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            app:dotsColor="#F8E098"
            app:selectedDotColor="@color/kuning"
            app:dotsSize="10dp"
            app:dotsSpacing="2.5dp"
            app:progressMode="true"
            />


                <RelativeLayout
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/tamplatenext"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/lewati"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lewati"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#0A0A0A"
                        android:textSize="14dp"
                        android:layout_alignParentStart="true"
                        />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/kembali"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kembali"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#0A0A0A"
                        android:textSize="14dp"
                        android:layout_alignParentStart="true"
                        />
                    <TextView
                        android:id="@+id/selanjutnya"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selanjutnya"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:background="@drawable/button_rounded"
                        android:layout_alignParentEnd="true"
                        android:padding="10dp"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>