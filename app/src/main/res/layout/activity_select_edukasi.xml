<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectEdukasiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:id="@+id/titleEdukasi"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="@drawable/rextangel_header"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_centerVertical="true"
                >

                <ImageView
                    android:id="@+id/backbtnkeuangan"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_row_left"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edukasi"
                    android:textSize="16dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleEdukasi"
            android:layout_marginTop="30dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:paddingBottom="100dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/kambing"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:cardCornerRadius="20dp"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_bgedukambing"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/titleedukambing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kambing"
                            android:fontFamily="@font/poppinsmedium"
                            android:textColor="#fff"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_below="@+id/titleedukambing"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/subtitleedukambing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belajar Ternak Kambing yuk"
                            android:fontFamily="@font/poppinsregular"
                            android:textColor="#fff"
                            android:textSize="12dp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/kolomsearch"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kambing"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/icontgl"
                    android:background="@drawable/bgedittext"
                    android:drawableEnd="@drawable/ic_iconsearch"
                    android:elevation="8dp"
                    android:hint="Type something"
                    android:paddingVertical="6dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:translationY="0dp"
                    android:translationZ="0dp" />
                <ImageView
                    android:id="@+id/icontgl"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/kambing"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_rounded"
                    android:src="@drawable/ic_icondate"
                    android:paddingVertical="10dp"
                    android:elevation="10dp"
                    />

                <View
                    android:id="@+id/line"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/kolomsearch"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="1dp"
                    android:background="#DDD"/>


                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/white"
                    android:layout_below="@+id/line"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="-2dp"
                    android:translationZ="0dp"
                    android:transformPivotX="0dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginHorizontal="20dp"
                    >
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"

                        >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/imgartikel"
                            android:layout_width="63dp"
                            android:layout_height="63dp"
                            app:cardCornerRadius="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/kambingmakan"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txtjudul9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_toEndOf="@+id/imgartikel"
                            android:fontFamily="@font/poppinssemibold"
                            android:text="Pakan terbaik untuk kambing"
                            android:textColor="#000"
                            android:textSize="14dp" />
                        <TextView
                            android:id="@+id/txttgl6"
                            android:layout_below="@+id/imgartikel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="02/09/2022"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="#B6B6B6"
                            android:layout_alignParentEnd="true"
                            android:layout_marginHorizontal="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="20dp"
                            />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>