<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFotoChat"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/gambarchat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@color/black"
        />
    <RelativeLayout
        android:id="@+id/titleKeuangan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:alpha="0.5"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
                <RelativeLayout
                    android:id="@+id/inititle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"

                    >
                        <ImageView
                            android:id="@+id/backbtnkeuangan"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_row_left"
                            />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/backbtnkeuangan"
                        >
                        <TextView
                            android:id="@+id/usenameChat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="Nama"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/usenameChat"
                            >
                            <TextView
                                android:id="@+id/tglkirimimg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:fontFamily="@font/poppinsregular"
                                android:text="16 November 2022"
                                android:textColor="#fff"
                                android:textSize="14dp" />
                            <TextView
                                android:id="@+id/jamimgchat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/tglkirimimg"
                                android:fontFamily="@font/poppinsregular"
                                android:text="14:00"
                                android:textColor="#fff"
                                android:textSize="14dp" />
                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>