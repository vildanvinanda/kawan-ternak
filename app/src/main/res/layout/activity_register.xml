<!--                </RadioGroup>-->


                <EditText
                    android:id="@+id/addpas2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableStart="@drawable/lockkey"
                    android:drawableEnd="@drawable/ic_no_see"
                    android:drawablePadding="13dp"
                    android:fontFamily="@font/poppinsregular"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#FAB832"
                    android:textColorHint="#FCDC9A"
                    android:textSize="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="1dp"
                    android:background="#FAB832"
                    android:layout_marginTop="-8dp"
                    />
                <EditText
                    android:id="@+id/verifpass"
                    android:drawableEnd="@drawable/ic_no_see"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm your password"
                    android:textColorHint="#FCDC9A"
                    android:fontFamily="@font/poppinsregular"
                    android:drawableStart="@drawable/lockkey"
                    android:drawablePadding="13dp"
                    android:inputType="textPassword"
                    android:layout_marginTop="15dp"
                    android:textColor="#FAB832"
                    android:textSize="14dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="1dp"
                    android:background="#FAB832"
                    android:layout_marginTop="-8dp"
                    />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btndaftar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_rounded"
                    android:text="Daftar"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="16dp"
                    android:paddingVertical="5dp"
                    android:layout_marginTop="20dp"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    >
                    <TextView
                        android:id="@+id/textdoang"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Sudah memilki akun?"
                        android:textColor="#000"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginTop="20dp"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:paddingBottom="20dp"
                        />
                    <TextView
                        android:id="@+id/addmasuk"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Masuk"
                        android:textColor="#FAB832"
                        android:fontFamily="@font/poppinssemibold"
                        android:layout_marginTop="20dp"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:paddingBottom="20dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:elevation="10dp"/>
</RelativeLayout>