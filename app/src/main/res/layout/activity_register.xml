<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imglogin"
                android:layout_width="194dp"
                android:layout_height="200dp"
                android:src="@drawable/ae2"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/textlogin"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/imglogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Daftar"
                android:textColor="#FAB832"
                android:layout_marginHorizontal="50dp"
                android:textSize="32dp"
                android:fontFamily="@font/poppinssemibold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/adduser2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="username"
                    android:textColorHint="#FCDC9A"
                    android:fontFamily="@font/poppinsregular"
                    android:drawableStart="@drawable/accountdua"
                    android:drawablePadding="13dp"
                    android:layout_marginTop="0dp"
                    android:inputType="text"
                    android:textColor="#FAB832"
                    android:textSize="14dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="1dp"
                    android:background="#FAB832"
                    android:layout_marginTop="-8dp"

                    />
                <EditText
                    android:id="@+id/addemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="email"
                    android:textColorHint="#FCDC9A"
                    android:fontFamily="@font/poppinsregular"
                    android:drawableStart="@drawable/iconemal"
                    android:drawablePadding="13dp"
                    android:layout_marginTop="15dp"
                    android:inputType="text"
                    android:textColor="#FAB832"
                    android:textSize="14dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="1dp"
                    android:background="#FAB832"
                    android:layout_marginTop="-8dp"
                    />
                <EditText
                    android:id="@+id/addhp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No.HP"
                    android:maxLength="13"
                    android:textColorHint="#FCDC9A"
                    android:fontFamily="@font/poppinsregular"
                    android:drawableStart="@drawable/iconohp"
                    android:drawablePadding="13dp"
                    android:layout_marginTop="15dp"
                    android:inputType="number"
                    android:textColor="#FAB832"
                    android:textSize="14dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="1dp"
                    android:background="#FAB832"
                    android:layout_marginTop="-8dp"
                    />

<!--                <Spinner-->
<!--                    android:id="@+id/spinnerjk"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="70dp"-->
<!--                    android:entries="@array/jenikelamin"-->
